@using CamposRepresentacoes.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Campos Representações</title>
    <link rel="icon" href="~/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/7.2.0/introjs.min.css">
    <link rel="stylesheet" href="~/lib/adminlte/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/toastr/toastr.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/AdminLTE-3.2.0/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/lib/adminlte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    @* Remova uma das linhas de carregamento do Bootstrap para evitar redundância *@
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    @await RenderSectionAsync("Style", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="/Index" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Index" class="brand-link">
                <img src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/dist/img/Campos.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light"> Campos Repres</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/dist/img/avatar.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            <a href="/Index" class="d-block">@user.UserName</a>
                        }
                        else
                        {
                            <a href="/Account/Login" class="d-block">Login</a>
                        }
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a asp-page="/Account/Register" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Cadastrar Usuario
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>                            
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Pedidos/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Pedidos
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Pedidos/Index" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Lista de Pedidos</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Pedidos/Cadastrar" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Novo Pedido</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Produtos/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Produtos
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Produtos/Index" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Consultar Produtos</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Produtos/CadastrarProdutos" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Cadastar Produtos</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Clientes/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Clientes
                                    <span class="fas fa-angle-left right"></span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Clientes/Index" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Consultar Clientes</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Clientes/CadastrarCliente" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Cadastrar Clientes</p>

                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Fornecedores/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Fornecedores
                                    <span class="fas fa-angle-left right"></span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Fornecedores/Index" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Consultar Fornecedores</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Fornecedores/CadastrarFornecedor" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Cadastar Fornecedor</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Transportadoras/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Transportadoras
                                    <span class="fas fa-angle-left right"></span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Transportadoras/Index" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Consultar Transportadoras</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Transportadoras/CadastrarTransportadora" class="nav-link">
                                        <i class="fas fa-circle nav-icon"></i>
                                        <p>Cadastar Transportadora</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <!-- Breadcrumb -->
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0"></h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item">
                                    <a href="/Index">Home</a>
                                </li>
                                <li class="breadcrumb-item active">Página Inicial</li>
                                <li class="breadcrumb-item">
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a href="#" data-toggle="modal" data-target="#logoutModal">Sair</a>
                                    }
                                    else
                                    {
                                        <a href="/Account/Login">Login</a>
                                    }
                                </li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Desenvolvido por: Well Tech; 2024 </strong> All rights reserved.
        </footer>
    </div>
    
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/lib/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/adminlte/dist/js/adminlte.min.js"></script>
    <script src="~/lib/adminlte/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <script src="~/lib/adminlte/plugins/fontawesome-free/css/all.css"></script>
    <script src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/select2/css/select2.css"></script>
    <script src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/select2-bootstrap4-theme/select2-bootstrap4.css"></script>
    <script src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/toastr/toastr.css"></script>    
    <script src="~/lib/adminlte/dist/css/adminlte.css"></script>
    <script src="~/AdminLTE-3.2.0/AdminLTE-3.2.0/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/js/site.js"></script>    
    <script src="~/adminlte-3.2.0/adminlte-3.2.0/dist/js/adminlte.min.js"></script>
    <script src="~/adminlte-3.2.0/adminlte-3.2.0/dist/js/adminlte.js"></script>
    @* OPTIONAL: Logout Modal *@
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirmar Logout</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja sair?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-primary" href="/Account/Login">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#logoutButton').click(function () {
                // Realiza o logout via AJAX ou diretamente no navegador
                $.post('/Account/Logout', function () {
                    // Após o logout, redireciona para a página de login
                    window.location.href = '/Account/Login';
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>